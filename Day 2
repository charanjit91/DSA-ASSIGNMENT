#include <iostream>

#include<stdlib.h>

using namespace std;

struct node

{

    int data;

    struct node *link;

     

};

node *start=NULL;

 

void create();

void display();

 

int main()

{

   char choice;

   A:

   create();

   cout<<"WANT TO INSERT VALUE(Y/N)";

   cin>>choice;

   if(choice=='y')

   {

       goto A;

   }

   else

   {

 

   display();

   exit;

   }

 

    return 0;

}

void create()

{

    node *newnode;

    newnode=(node*)malloc(sizeof(struct node));

    cout<<"ENTER THE ELEMENT::";

    cin>>newnode->data;

    newnode->link=NULL;

    if(start==NULL)

    {

       start=newnode;

    }

    else

    {

        newnode->link=start;

    }

}

void display()

{

 

    temp=start;

    node *temp;

    cout<<"LINKED LIST IS::"<<endl;

    while(temp!=NULL)

    {

        cout<<temp->data;

        temp=temp->link;

    }

    cout<<endl;

 

}
